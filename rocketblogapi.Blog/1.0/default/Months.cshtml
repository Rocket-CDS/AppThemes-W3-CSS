@inherits RocketDirectoryAPI.Components.RocketDirectoryAPITokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI.Components;
@using RocketDirectoryAPI.Components;
@using Simplisity;
@AssignDataModel(Model)
@AddProcessDataResx(appTheme, true)
@AddProcessData("resourcepath", "/DesktopModules/DNNrocketModules/RocketDirectoryAPI/App_LocalResources/")
<!--inject-->
@{
    var monthList = RocketDirectoryAPIUtils.GetArticlesByMonth(sessionParams, systemData.SystemKey, DateTime.Now.AddMonths(-6), 12, "publisheddate");
    var reloadUrl = "";
    var broswerUrl = ListUrl(moduleData.ListPageTabId()).ToString();
    if (categoryDataList.DataList.Count > 0)
    {
        reloadUrl = broswerUrl;
    }
}
<div class="rocket-months " style="padding-right:8px;padding-left:8px;padding-top:@(moduleData.GetSetting("toppadding"))px;padding-bottom:@(moduleData.GetSetting("bottompadding"))px;">

    <div class="w3-button w3-block w3-left-align rocket-monthdates " onclick="blog_showSelectedMonths('0','','','@broswerUrl','@broswerUrl');">
        <span>
            @ResourceKey("RocketBlogAPI.latest")
        </span>
        <span class="w3-right">
        </span>
    </div>

    @{
        var monthidx = 1;
    }
    @foreach (var a in monthList)
    {
        if (a.Value.Count > 0)
        {
            <div class="w3-button w3-block w3-left-align rocket-monthdates rocket-monthdates@(monthidx) " monthidx="@(monthidx)" onclick="blog_showSelectedMonths($(this).attr('monthidx'),'@a.Key.ToString("yyyy-MM-dd")', '@a.Key.AddMonths(1).AddDays(-1).ToString("yyyy-MM-dd")', '@reloadUrl','@broswerUrl');">
                <span>
                    @a.Key.ToString("MMMM yyyy")
                </span>
                <span class="w3-right">
                    @a.Value.Count
                </span>
            </div>
        }
        monthidx += 1;
    }

</div>

@DateJsApiCall(moduleData, "#rocket-blog", sessionParams)

<script>
    $(document).ready(function () {
        if (simplisity_getSessionField('searchdate1') != '' && simplisity_getSessionField('viewsearchtext') == '') {
            monthidx = simplisity_getSessionField('monthidx');
            $('.rocket-monthdates').removeClass('w3-theme-l3');
            $('.rocket-monthdates' + monthidx).addClass('w3-theme-l3');
        }
        $('.simplisity_loader').hide();
    });

</script>
