@inherits RocketContentAPI.Components.RocketContentAPITokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using Simplisity;
@using RocketContentAPI.Components;
@using DNNrocketAPI.Components;
@using RocketPortal.Components;

@{
    var info = (SimplisityInfo)Model.List.First();
    var moduleData = (ModuleContentLimpet)Model.GetDataObject("modulesettings");
    AddProcessDataResx(appTheme, true);
    AddProcessData("resourcepath", "/DesktopModules/DNNrocketModules/RocketForms/App_LocalResources/");
}

<style>
    body {
        margin: 20px;
        color: #595959;
        font-size: 14px;
        font-family: Arial, Helvetica;
        line-height: 18px;
    }

    h2 {
        font-size: 30px;
        color: #242a31;
        line-height: 30px;
        font-family: Arial, Helvetica;
    }

    .datatable {
        margin: 20px 0;
        border-collapse: collapse;
    }

        .datatable td {
            padding: 12px;
            border: 1px solid #ddd;
        }
</style>

<h2>@moduleData.GetSetting("subject")</h2>
<table class="datatable" border="0" cellspacing="2" cellpadding="0">
    <tr>
        <td align="right"><label>@ResourceKey("RocketForms.subject")</label></td>
        <td>@info.GetXmlProperty("genxml/subject")</td>
    </tr>
    <tr>
        <td align="right"><label>@ResourceKey("RocketForms.name")</label></td>
        <td>@info.GetXmlProperty("genxml/name")</td>
    </tr>
    <tr>
        <td align="right"><label>@ResourceKey("RocketForms.company")</label></td>
        <td>@info.GetXmlProperty("genxml/company")</td>
    </tr>
    <tr>
        <td align="right"><label>@ResourceKey("RocketForms.email")</label></td>
        <td>@info.GetXmlProperty("genxml/email")</td>
    </tr>
    <tr>
        <td align="right"><label>@ResourceKey("RocketForms.tel")</label></td>
        <td>@info.GetXmlProperty("genxml/tel")</td>
    </tr>
    <tr>
        <td align="right"><label>@ResourceKey("RocketForms.message")</label></td>
        <td>@HtmlOf(info.GetXmlProperty("genxml/message"))</td>
    </tr>
</table>